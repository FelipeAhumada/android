<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carrito.CarritoDeCompras">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbarCarro" />


    <include
        android:id="@+id/toolbarCarro"
        layout="@layout/toolbar" />



    <View
        android:id="@+id/barraSeparadoraCarrito"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@id/tvPrecioTotalCarrito" />


    <TextView
        android:id="@+id/tvPrecioTotalCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text ="Total $20.000"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!--
    <Button
        android:id="@+id/btnComprarCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:text="Ver mÃ¡s"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"/>
        -->


    <TextView
        android:id="@+id/tvSinProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin productos ingresados"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/barraSeparadoraCarrito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvCarro"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>