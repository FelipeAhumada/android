<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id= "@+id/ivSuperHero"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSuperHeroName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profe Felipe"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivSuperHero"
        tools:layout_editor_absoluteY="75dp" />

    <TextView
        android:id="@+id/tvRealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FElipe Ahumada"
        app:layout_constraintBaseline_toTopOf="@id/tvSuperHeroName"
        app:layout_constraintStart_toEndOf="@id/ivSuperHero"/>

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profe IPP"
        app:layout_constraintBaseline_toTopOf="@id/tvRealName"
        app:layout_constraintStart_toEndOf="@id/ivSuperHero"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>