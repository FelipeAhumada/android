<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">




    <TextView
        android:id="@+id/tvCantidadCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTituloCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="x Pizza Napolitana"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="10dp"


        app:layout_constraintStart_toEndOf="@id/tvCantidadCarrito"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/tvPrecioCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4600"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green"

        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imgBorrarCarrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/borrar"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvPrecioCarrito"
        app:layout_constraintTop_toBottomOf="@id/tvPrecioCarrito" />


</androidx.constraintlayout.widget.ConstraintLayout>