<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cantidades.SeleccionarCantidades">


    <ImageView
        android:id="@+id/imgSeleccionCantidades"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        tools:background="@color/primary" />

    <TextView
        android:id="@+id/tvTituloSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="AAAA"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imgSeleccionCantidades"/>

    <TextView
        android:id="@+id/tvDescripcionSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="AAAA"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloSeleccion"/>


    <View
        android:id="@+id/barraSeparadora"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcionSeleccion" />




    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="Seleccione la cantidad"
        app:layout_constraintEnd_toEndOf="@+id/ivPlus"
        app:layout_constraintStart_toStartOf="@+id/ivMinus"
        app:layout_constraintTop_toBottomOf="@+id/barraSeparadora" />

    <ImageView
        android:id="@+id/ivMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:src="@mipmap/minus"
        app:layout_constraintEnd_toStartOf="@id/tvCantidad"
        app:layout_constraintStart_toStartOf="@+id/barraSeparadora"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/plus"
        app:layout_constraintStart_toEndOf="@id/tvCantidad"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivMinus"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="1"

        app:layout_constraintStart_toEndOf="@id/ivMinus"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:text="999" />


    <TextView
        android:id="@+id/tvTituloValorUnitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Valor unitario"
        app:layout_constraintEnd_toEndOf="@+id/barraSeparadora"
        app:layout_constraintTop_toBottomOf="@+id/barraSeparadora" />

    <TextView
        android:id="@+id/tvValorUnitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="$ 0"

        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/barraSeparadora"
        app:layout_constraintStart_toStartOf="@+id/tvTituloValorUnitario"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloValorUnitario" />

    <TextView
        android:id="@+id/tvTituloValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:text="Valor total"
        app:layout_constraintEnd_toEndOf="@+id/barraSeparadora"
        app:layout_constraintStart_toStartOf="@+id/tvTituloValorUnitario"
        app:layout_constraintTop_toBottomOf="@+id/tvValorUnitario" />

    <TextView
        android:id="@+id/tvValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="$ 0"

        android:textColor="@color/primary"
        app:layout_constraintEnd_toEndOf="@+id/barraSeparadora"
        app:layout_constraintStart_toStartOf="@+id/tvTituloValorUnitario"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloValorTotal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Observaciones"
        android:paddingHorizontal="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/barraSeparadora"
        app:layout_constraintStart_toStartOf="@+id/barraSeparadora"
        app:layout_constraintTop_toBottomOf="@+id/tvValorTotal" />

    <Button
        android:id="@+id/btnInsertarAlCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Insertar al carro"
        android:textAllCaps="false"

        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent" />

    <include
        android:id="@+id/include3"
        layout="@layout/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>